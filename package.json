{
  "name": "merkmal-verwaltung-desktop",
  "version": "1.0.0",
  "description": "Merkmal Verwaltung Desktop Application",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win --publish=never",
    "build-portable": "electron-builder --win portable --publish=never",
    "package-win": "electron-packager . MerkmalVerwaltung --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.desktop.merkmalverwaltung",
    "productName": "Merkmal Verwaltung",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "client2/out/**/*",
      "server/**/*",
      "!server/node_modules/.cache/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publish": null,
      "verifyUpdateCodeSignature": false,
      "signDlls": false,
      "sign": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "keywords": [
    "electron",
    "desktop"
  ],
  "author": "Desktop Team",
  "license": "ISC"
}
